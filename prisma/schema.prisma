// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @unique @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  status    String   @default("Active")
  course    Course[]
}

model Course {
  id        String   @unique @default(uuid())
  title     String
  modules   Int
  owner     User     @relation(references: [id], fields: [userID])
  userID    String
  createdAt DateTime
}
